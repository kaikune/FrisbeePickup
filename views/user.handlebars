<main>
    <h1>{{user.username}}</h1>
    <a>About Me: {{user.description}}</a>
    <a>Friends:</a>
    <ul>
        {{#each friends}}
            <li href="/users/{{this._id}}">{{this.name}}</li>
        {{/each}}
    </ul>
    <a>Groups:</a>
    <ul>
        {{#each groups}}
            <li href="/groups/{{this._id}}">{{this.name}}</li>
        {{/each}}
    </ul>
    <a>Upcoming Games:</a>
    <ul>
        {{#each games}}
            <li href="/games/{{this._id}}">{{this.name}}</li>
        {{/each}}
    </ul>

    {{#if isOwner}}
        <button class="edit-button">Edit</button>
    {{/if}}
</main>