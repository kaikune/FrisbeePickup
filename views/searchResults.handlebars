<main>
    {{#if errors}}
        {{#each errors}}
            <p class="error">{{this}}</p>
        {{/each}}
    {{/if}}
    {{#if friends}}
    <div class="response-list">
        <a>Friends:</a>
        <ul>
            {{#each friends}}
                <li href="/users/{{this._id}}">{{this.name}}</li>
            {{/each}}
        </ul>
    </div>
    {{/if}}
    {{#if groups}}
    <div class="response-list">
        <a>Groups:</a>
        <ul>
            {{#each groups}}
                <li href="/groups/{{this._id}}">{{this.name}}</li>
            {{/each}}
        </ul>
    </div>
    {{/if}}
    {{#if games}}
    <div class="response-list">
        <a>Upcoming Games:</a>
        <ul>
            {{#each games}}
                <li href="/games/{{this._id}}">{{this.name}}</li>
            {{/each}}
        </ul>
    </div> 
    {{/if}}
</main>