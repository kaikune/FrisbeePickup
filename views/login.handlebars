<main>
    <div class="form-wrapper">
        <form id="login-form" action="/login" method="POST">
            <h3>Login</h3>
            <label class="form-label" for="login-emailAddress">Email:</label>
                <input class="form-input" type="text" id="login-emailAddress" name="login-emailAddress">
                <br>
            <label class="form-label" for="login-password">Password:</label>
                <input class="form-input" type="password" id="login-password" name="login-password">
                <br>
            <button type="reset" class="form-submit-button">Cancel</button>
            <button type="submit" class="form-submit-button">Login</button>
            <p id="register-label">Don't have an account? click <a href="/register">here</a> to register</p>
        </form>
    </div>
    <a id="error-label" hidden></a>
    <script src="/public/js/loginFormValidation.js"></script>
</main>