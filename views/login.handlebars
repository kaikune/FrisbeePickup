<main>
    <div class="form-wrapper">
        <form id="login-form" action="/login" method="POST">
            <h3>Login</h3>
            <label class="form-label" for="login-emailAddress">Email:</label>
                <input class="form-input" type="text" id="login-emailAddress" name="login-emailAddress">
                <br>
            <label class="form-label" for="login-password">Password:</label>
                <input class="form-input" type="password" id="login-password" name="login-password">
                <br>
            <button type="submit" class="form-submit-button">Submit</button>
        </form>
    </div>
</main>